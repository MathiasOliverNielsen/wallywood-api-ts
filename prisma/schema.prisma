generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
}

// Bruger roller
enum Role {
  admin
  customer
}

// Brugere
model User {
  id Int @id @default(autoincrement())
  firstname String
  lastname String
  email String @unique
  password String
  role Role @default(customer)
  isActive Boolean @default(true)
  createdAt DateTime @default(now())
  
  cartlines Cartline[]
  userRatings UserRating[]

  @@map("users")
}

// Film plakater
model Poster {
  id Int @id @default(autoincrement())
  name String
  slug String @unique
  description String @db.Text
  image String
  width Int
  height Int
  price Float
  stock Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  cartlines Cartline[]
  userRatings UserRating[]
  genrePosterRels GenrePosterRel[]

  @@map("posters")
}

// Film genrer
model Genre {
  id Int @id @default(autoincrement())
  title String
  slug String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  genrePosterRels GenrePosterRel[]

  @@map("genres")
}

// Indk√∏bskurv linjer
model Cartline {
  id Int @id @default(autoincrement())
  userId Int
  posterId Int
  quantity Int
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  poster Poster @relation(fields: [posterId], references: [id], onDelete: Cascade)

  @@map("cartlines")
}

// Bruger vurderinger
model UserRating {
  id Int @id @default(autoincrement())
  userId Int
  posterId Int
  numStars Int
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  poster Poster @relation(fields: [posterId], references: [id], onDelete: Cascade)

  @@unique([userId, posterId])
  @@map("userRatings")
}

// Forbindelse mellem genrer og plakater
model GenrePosterRel {
  genreId Int
  posterId Int
  
  genre Genre @relation(fields: [genreId], references: [id], onDelete: Cascade)
  poster Poster @relation(fields: [posterId], references: [id], onDelete: Cascade)

  @@id([genreId, posterId])
  @@map("genrePosterRel")
}
